#!/bin/bash

set -e
[[ $VERBOSE == 1 ]] && set -x

HERE="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
ROOT=$(cd $HERE/../..; pwd)

REDISLABS_DIR=/var/opt/redislabs

VERSION=$(NUMERIC=1 $ROOT/getver)
if [[ -z $VERSION ]]; then
	>&2 echo "Cannot determine module version. Aborting."
	exit 1
fi

cd $REDISLABS_DIR/modules/rg/$VERSION/deps/python3/.venv

# fix shebangs
$ROOT/deps/cpython/Tools/scripts/pathfix.py -n -i "/usr/bin/env python" . bin/* > /dev/null 2>&1 || true

# fix symlinks
SUB="s/.*\(\/redislabs\/lib\/modules\/python3\)/\/var\/opt\1/"
tmpfile=$(mktemp /tmp/fix-pyenv.XXXXXX)
if [[ -f $tmpfile ]]; then
	find . -type l -printf 'ln -nsf "$(readlink "%p" | sed $SUB)" "$(echo "%p" | sed $SUB)"\n' > $tmpfile
	source $tmpfile
	rm -f $tmpfile
fi

# fix activate scripts
for f in `grep -ril '\.venv' bin/activate*` .project; do
	sed -i "s/\(['\"]\).*\(\/redislabs\/lib\/modules\/rg\)/\1\/var\/opt\2/" $f
done

exit 0
